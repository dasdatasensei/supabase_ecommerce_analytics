#!/bin/bash
set -e

# This script should be mounted in the docker-compose file as:
# - ./init-db-config.sh:/docker-entrypoint-initdb.d/init-db-config.sh

echo "Running custom database initialization..."

# Grant superuser to ***REMOVED***
psql -v ON_ERROR_STOP=1 --username "$POSTGRES_USER" --dbname "$POSTGRES_DB" <<-EOSQL
    -- Update authentication method
    ALTER USER ***REMOVED*** WITH PASSWORD '***REMOVED***';
    ALTER USER ***REMOVED*** WITH SUPERUSER;

    -- Create olist schema
    CREATE SCHEMA IF NOT EXISTS olist;

    -- Create auth schema for Supabase Auth
    CREATE SCHEMA IF NOT EXISTS auth;

    -- Grant permissions on olist schema
    GRANT ALL PRIVILEGES ON SCHEMA olist TO ***REMOVED***;
    GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA olist TO ***REMOVED***;
    GRANT ALL PRIVILEGES ON ALL SEQUENCES IN SCHEMA olist TO ***REMOVED***;
    GRANT ALL PRIVILEGES ON ALL FUNCTIONS IN SCHEMA olist TO ***REMOVED***;

    -- Grant permissions on auth schema
    GRANT ALL PRIVILEGES ON SCHEMA auth TO ***REMOVED***;
    GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA auth TO ***REMOVED***;
    GRANT ALL PRIVILEGES ON ALL SEQUENCES IN SCHEMA auth TO ***REMOVED***;
    GRANT ALL PRIVILEGES ON ALL FUNCTIONS IN SCHEMA auth TO ***REMOVED***;

    -- Set default privileges for olist schema
    ALTER DEFAULT PRIVILEGES IN SCHEMA olist GRANT ALL ON TABLES TO ***REMOVED***;
    ALTER DEFAULT PRIVILEGES IN SCHEMA olist GRANT ALL ON SEQUENCES TO ***REMOVED***;
    ALTER DEFAULT PRIVILEGES IN SCHEMA olist GRANT ALL ON FUNCTIONS TO ***REMOVED***;

    -- Set default privileges for auth schema
    ALTER DEFAULT PRIVILEGES IN SCHEMA auth GRANT ALL ON TABLES TO ***REMOVED***;
    ALTER DEFAULT PRIVILEGES IN SCHEMA auth GRANT ALL ON SEQUENCES TO ***REMOVED***;
    ALTER DEFAULT PRIVILEGES IN SCHEMA auth GRANT ALL ON FUNCTIONS TO ***REMOVED***;

    -- Set search path
    ALTER USER ***REMOVED*** SET search_path TO olist, auth, public;
EOSQL

echo "Database initialization complete!"